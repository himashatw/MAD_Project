<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ItemProfile"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:padding="10dp"
        android:background="@drawable/shape_rect01">

        <ImageButton
            android:id="@+id/Backbtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/ic_back_white"
            android:background="@null"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Item Profile"
            android:textStyle="bold"
            android:textSize="28sp"
            android:textColor="@color/white"/>



    </RelativeLayout>
    <ImageView
        android:id="@+id/iconIv"
        android:layout_width="40dp"
        android:layout_height="48dp"
        android:background="@drawable/shape_circle01"
        android:layout_marginTop="60dp"
        android:padding="5dp"
        app:srcCompat="@drawable/ic_add_shopping_white"
        android:layout_marginBottom="40dp"
        android:layout_centerHorizontal="true"/>


    <ImageView
        android:id="@+id/product_img"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="134dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/pro_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Product Name"
        android:layout_below="@id/product_img"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="5dp"

        />
    <TextView
        android:id="@+id/pro_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Product Price"
        android:textColor="@color/colorPrimary"
        android:gravity="center"
        android:layout_below="@+id/pro_name"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"

        />

    <TextView
        android:id="@+id/qnty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Product Catogery"
        android:gravity="center"
        android:textColor="@color/Black"
        android:layout_below="@+id/pro_price"
        android:textSize="15dp"
        android:textStyle="italic"
        android:layout_marginTop="5dp"

        />

    <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
        android:id="@+id/quantity_btn"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/qnty"
        android:layout_alignParentStart="true"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="162dp"
        android:layout_marginRight="20dp"
        android:elevation="6dp"
        android:gravity="center"
        app:finalNumber="10"
        app:initialNumber="1"
        app:textColor="@color/Black"
        app:textSize="16dp">

    </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>

    <Button
        android:id="@+id/buynow"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/qnty"
        android:layout_alignParentRight="true"
        android:layout_marginTop="29dp"
        android:layout_marginRight="159dp"
        android:gravity="center"
        android:text="Buy Now" />

    <Button
        android:id="@+id/addtoCart"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/qnty"
        android:layout_alignParentRight="true"
        android:layout_marginTop="29dp"
        android:layout_marginRight="32dp"
        android:gravity="center"
        android:text="Add to cart" />


</RelativeLayout>